/* pages/information/content.wxss */
page{
  height: 100%;
}
.container{
  position: relative;
  bottom: 0rpx;
}
.content{
  position:relative;
  height: 100%;
  display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
  /* padding-bottom: 90rpx; */
}
.video {
  width: 100%;
}
.video video{
  width: 750rpx;
}

/* 视频标题 */
.content_comment{
  flex: 1;
	overflow-y: scroll;
}
.title{
  padding:10rpx 0 10rpx 10rpx; 
}
.title text:first-child{
  font-size: 34rpx;
}
.title text:last-child{
  color: #777777;
  font-size: 28rpx;
}

/* 评论区 */
.comment_container{
  width: 100%;
	margin-top: 10rpx;
}
.comment_container view>view{
  float: left;
}
.comment_container view .pic{
  width: 90rpx;
}
.comment_container .pic image{
  width: 70rpx;
	border-radius: 35rpx;
	margin-left: 20rpx;
}

/* 详情 */
.comment_container .detail{
  width: 630rpx;
  padding-left: 20rpx; 
  /* border: 1px solid red; */
}
.comment_container .detail .head{
	height: 80rpx;line-height: 80rpx;
  /* border: 1px solid black; */
	width: 100%;

}
.detail .head view{
  float: left;
}
.detail .head .name{
	width: 70%;
}
.detail .head .praise{
	width: 30%;
	position: relative;
}
.detail .praise image{
	width: 40rpx;
	position: absolute;
	top: 15rpx;
	right: 40rpx;
}
.comment_container .detail .content{
	line-height: 40rpx;
}
.comment_container .detail .comment_time{
	height: 60rpx;line-height: 60rpx;
  width: 100%;
}

/* 发表评论区 */
.btm_comment{
  border: 1px solid #DCDCDC;
	width: 100%;
	height: 90rpx;
	position: absolute;
	/* z-index: 1000;  */
	left: 0;
  bottom: 0;
  background-color: white;
}
.btm_comment image{
  display: inline-block;
	width: 30rpx;height:30rpx; 
	position: relative;
	left: 4%;
	margin-right: 9%;
}
.btm_comment input{
  display: inline-block;
	width: 450rpx;
	height: 50rpx;
	border-radius:30rpx;
	border: 0;
	background-color: #dcdcdc;
	padding-left:15rpx; 
}
.btm_comment text{
	display: inline-block;
  height: 60rpx;
	line-height: 60rpx;
	width: 200rpx;
	text-align: center;
}




