/**app.wxss**/
/* 底部 */
.bottom{
  text-align: center;
  font-size: 28rpx;
  background-color: #222;
  color: #777;
  width: 100%;
  padding: 10rpx 0;
}



/* 小程序公共样式表 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
  font-size:30rpx; 
} 
view{
  font-size:30rpx;
}

image{
  border: 0;
}
/*清除浮动*/
.clearfix:after{
	clear:both;
	content:'.';
	display:block;
	width: 0;height: 0;
	visibility:hidden;
}
/* 元素不换行 */
.ellipse{
  font-weight: normal;
	white-space: nowrap;/*规定元素不换行*/
	overflow: hidden;
	text-overflow: ellipsis;
}

/*flex垂直居中*/
.flex_vertical{
	display: flex;/*弹性布局，设在父元素上，子元素居中*/
	display: -webkit-flex;
	align-items: center;/*垂直居中*/
	-webkit-align-items: center;
}